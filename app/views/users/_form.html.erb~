<div class="main">
	<%= form_for(@user) do |f| %>
	  <% if @user.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(@user.errors.count, "error") %> evitaron que se guardara la informaci√≥n:</h2>

		  <ul>
		  <% @user.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
	  <% end %>

	  <div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
		<div id="name_errors"></div>
	  </div>
	  <div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
		<div id="mail_errors"></div>
	  </div>
	  <div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :pass_hash %>
		<div id="pass_errors"></div>
	  </div>
	  <div class="actions">
		<%= f.submit "Registrar usuario" %> | <%= link_to "Volver", "log_in" %>
	  </div>
	<% end %>
</div>	
	
