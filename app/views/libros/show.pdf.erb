<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<% @libro.each do |libro| %>
<p>
	<%= libro.apellido %>,

	<%= libro.nombre.first %>.

	<% if libro.anio != nil %>
		(<%= libro.anio %>)
	<% else %>
		(s.f.)
	<% end %>

	<% if libro.titulo_capitulo != nil %>
		<%= libro.titulo_capitulo %>
	<% else %>
	<% end %>

	<span class="italic"><%= libro.titulo_libro %></span>

	<% if @libro.lugar_publicacion != nil %>
		Lugar de publicaci√≥n: <%= @libro.lugar_publicacion %> 
	<% end %>

	<% if @libro.casa_publicacion != nil %>
		<%= @libro.casa_publicacion %>.
	<% end %>
	
	<% if libro.url == nil %>
	<% else %>
		Recuperado de: <%= libro.url%>
	<% end %>
</p>
<% end %>

