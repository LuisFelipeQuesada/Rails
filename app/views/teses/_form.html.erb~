<div class="wrapper">
	<%= form_for(@tese) do |f| %>
	  <% if @tese.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(@tese.errors.count, "error") %> evitaron que se guardara la referencia:</h2>

		  <ul>
		  <% @tese.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
	  <% end %>

	  <div class="left">
		  <div class="field">
			<%= f.label :apellido, "Apellido del autor" %><br />
			<%= f.text_field :apellido %>
			<div id="tesis_apellido_errors"></div>
		  </div>
		  
		  <div class="field">
			<%= f.label :nombre, "Nombre del autor" %><br />
			<%= f.text_field :nombre %>
			<div id="tesis_nombre_errors"></div>
		  </div>
		  
		  <div class="field">
			<%= f.label :anio, "Año" %><br />
			<%= f.text_field :anio %>
		  </div>
	  </div>
	  
	  <div class="right">
		  <div class="field">
			<%= f.label :titulo, "Título de la tesis" %><br />
			<%= f.text_field :titulo %>
			<div id="tesis_titulo_errors"></div>
		  </div>
		  
		  <div class="field">
			<%= f.label :institucion, "Institución" %><br />
			<%= f.text_field :institucion %>
			<div id="tesis_insti_errors"></div>
		  </div>
		  
		  <div class="field">
			<%= f.label :localizacion, "Localización" %><br />
			<%= f.text_field :localizacion %>
			<div id="tesis_localizacion_errors"></div>
		  </div>
		  
		  <div class="actions">
			<%= f.submit "Guardar" %> | <%= link_to 'Volver', teses_path, :class => "option_link" %>
		  </div>
	  </div>
	<% end %>
</div>

